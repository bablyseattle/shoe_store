<h1><%= @store.name %></h1>
<div class="row">
	<div class="column col-md-6">
		<h3>Brands:</h3>

		<%if @list.any?  %>
			<% @list.each do |item| %>
			<li><%= item.name %><span>      $</span><%= item.price %></li>
				
			<%end%>
			<% else%>
			<p>There are no brands in this store!</p>
		<% end%>

		<br><br><br>
		<h3>Add brands to this store</h3>
		<form action="/add_brand_to_store" method="post" class="form-inline">
			<input type="hidden" name="store_id" value="<%= @store.id %>">
			<%if @brands.any?  %>
				<% @brands.each do |item| %>
				<input type="checkbox" name="check[]" value="<%= item.id %>"><%= item.name %> <span>      $</span><%= item.price %> <br>
					
				<%end%>

				<% else%>
				<p>There are no brands available to add</p>
			<% end%>

			<button type="submit" class="btn btn-primary">Add brand</button>
		</form>
	</div>

	<div class="col-md-6">
		<form action="/delete_store/<%= @store.id %>" method="post">
			<input name="_method" type="hidden" value="delete" />
			<p>Are you sure you want to delete this store?</p>
			<button type="submit" class="btn-md btn-danger"> Delete</button>
		</form>
		<br><br>
		<form action="/update_store/<%= @store.id %>" method ="post">
			<p>Update name of store</p>
			<input type="hidden" name="_method" value="patch">
			<input type="text" name="name">

			<button type="submit" class="btn-md btn-warning"> Update</button>
		</form>
	</div>
</div>
<br><br><br><br>
	<a href="/"><button class="btn-lg btn-info">Home</button></a>
